@model GenesisBlog.Models.BlogPost

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BlogPost</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Abstract" class="control-label"></label>
                <textarea asp-for="Abstract" class="form-control" rows=10></textarea>
                <span asp-validation-for="Abstract" class="text-danger"></span>
            </div>

            @*THIS IS THE START OF THE PROBLEM*@
           @* <div class="form-group" id="Content"></div>*@

           <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <div id="quillEditor"></div>
                <input type="hidden" asp-for="Content"/>
           </div>

            @* This is here in order to be able to programmatically copy the Quill data into
            so that it gets submitted to the HttpPost using the Content name *@            
            <input id="target" type="hidden" name="Content"/>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        //Tell the form to do some stuff real quick before it submits the data
        document.querySelector("form").addEventListener("submit", function() {
            
            //Stuff the data currently inside of the Quill editor inside the hidden input the name="Content"
            document.getElementById("Content").value = quill.container.firstChild.innerHTML;         
        })
    </script>

}
